<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.media.MediaView?>
<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #282e35;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.tetkole.tetkole.controllers.VideoSceneController">

    <top>
        <AnchorPane>
            <fx:include fx:id="header" source="components/Header.fxml" AnchorPane.rightAnchor="0.0"/>
        </AnchorPane>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <MediaView fx:id="mediaView" fitHeight="800.0" fitWidth="800.0" />
            <Slider fx:id="slider" prefHeight="25.0" prefWidth="140.0" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="5">

            <Button fx:id="btnPlayPause" contentDisplay="TOP" onAction="#playPauseVideo" prefHeight="60" prefWidth="150" styleClass="buttons, blue" text="%Play">
                <graphic>
                    <ImageView fitHeight="82.5" fitWidth="82.5">
                        <Image url="@../../../images/play.png" />
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="btnRecord" text="%StartRecord" contentDisplay="TOP" onAction="#onRecordButtonClick" prefHeight="60" prefWidth="150" styleClass="buttons, blue">
                <graphic>
                    <ImageView fitHeight="82.5" fitWidth="82.5">
                        <Image url="@../../../images/record.png" />
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
