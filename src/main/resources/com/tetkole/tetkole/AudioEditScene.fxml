<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import com.tetkole.tetkole.utils.wave.WaveVisualization?>
<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #282e35;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.tetkole.tetkole.controllers.AudioEditSceneController">
   <top>
       <AnchorPane>
           <fx:include source="components/Header.fxml" AnchorPane.rightAnchor="0.0"/>
       </AnchorPane>
   </top>

    <center>
       <WaveVisualization fx:id="waveVisualization"/>
    </center>

    <bottom>
        <Slider fx:id="audioSlider" BorderPane.alignment="CENTER" />
        <HBox alignment="CENTER" spacing="5">
            <Button contentDisplay="TOP" onAction="#onPlayPauseButtonClick" prefHeight="60" prefWidth="150" styleClass="buttons, blue">Toggle play/pause
                <graphic>
                    <ImageView fitHeight="82.5" fitWidth="82.5">
                        <Image url="@../../../images/play.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button contentDisplay="TOP" onAction="#onRecordButtonClick" prefHeight="60" prefWidth="150" styleClass="buttons, blue">Toggle record
                <graphic>
                    <ImageView fitHeight="82.5" fitWidth="82.5">
                        <Image url="@../../../images/record.png" />
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </bottom>


</BorderPane>
