<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<StackPane prefHeight="400.0" prefWidth="600.0" styleClass="background_color"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.tetkole.tetkole.controllers.ModeratorSceneController">

    <fx:include fx:id="header" source="components/Header.fxml"/>

    <VBox spacing="100" alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0">
        <HBox alignment="CENTER">
            <VBox alignment="CENTER">
                <Label text="%userMail" style="-fx-text-fill: white; -fx-font-size: 20px"/>
                <TextField fx:id="userMailInput" />
                <Button onAction="#onChangePassword" prefHeight="60" prefWidth="150" styleClass="buttons, grey" text="%updateYourPassword" />
                <TextField fx:id="newPassword" style="-fx-font-size: 15px; -fx-padding-top: 15px" visible="false" editable="false"/>
            </VBox>
        </HBox>


    </VBox>

</StackPane>
